<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%- title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link rel="stylesheet" href="./assets/style/all.css" />
  </head>

  <body>
    <section class="mb-lg-6 header">
      <div class="container bg-light">
        <nav
          class="navbar navbar-expand-lg navbar-light d-flex justify-content-around"
        >
          <!-- logo -->
          <h1>
            <a class="navbar-brand" href="#"
              ><img src="./assets/images/logo.svg" alt=""
            /></a>
          </h1>
          <!-- menu btn+ dropdown menu -->

          <!-- menu btn -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- dropdown menu -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul
              class="navbar-nav me-auto mb-2 mb-lg-0 d-flex align-items-lg-center"
            >
              <!-- search+icon -->
              <li class="d-flex align-lg-center d-none d-lg-block d-md-none">
                <form class="d-flex">
                  <input
                    class="form-control"
                    type="search"
                    placeholder="搜尋作品名稱、藝術家名稱"
                    aria-label="Search"
                  />
                  <button class="btn searchBtn" type="submit">
                    <a href="#">
                      <i class="fa-solid fa-magnifying-glass"></i>
                    </a>
                  </button>
                </form>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">探索</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">市值</a>
              </li>
              <!-- 錢包icon -->
              <li class="nav-item d-none d-md-block">
                <a class="nav-link" href="#">
                  <i class="fa-solid fa-wallet fs-3"></i>
                </a>
              </li>
              <!-- 按鈕錢包 -->
              <li class="nav-item d-md-none">
                <a class="nav-link" href="#">
                  <button class="btn btn-primary btn-primary-link">
                    連結錢包
                  </button>
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </section>

    <%- contents %>

    <footer class="footer bg-light text-center py-5">
      © ART NFT. All Rights Reserved
    </footer>

    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>

    <script
      src="https://kit.fontawesome.com/a9ce70e31b.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
      integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D"
      crossorigin="anonymous"
      async
    ></script>
  </body>
</html>
